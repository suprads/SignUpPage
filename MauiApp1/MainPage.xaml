<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SignUpPage.MainPage"
             Title="Sign Up">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Label Text="Username"/>
            <Entry x:Name="UsernameEntry" Placeholder="Enter username"/>

            <Label Text="Password"/>
            <Entry x:Name="PasswordEntry" Placeholder="Enter password" IsPassword="True"/>


            <Label Text="Confirm Password"/>
            <Entry x:Name="ConfirmPasswordEntry" Placeholder="Reenter password to confirm" IsPassword="True"/>

            <Label x:Name="LblError" TextColor="Red" IsVisible="False"/>


            <Button Text="Sign Up" Clicked="BtnSignUpClicked"/>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
